    "@types/node": "^8.0.0",
    "chai": "^4.0.0",
    "core-js": "^2.4.1",
    "cpy-cli": "^1.0.1",
    "env-cmd": "^7.0.0",
    "eslint": "^4.0.0",
    "firebase": "^4.0.0",
    "firebase-nightlight": "^3.0.0",
    "geofire": "^4.1.2",
    "glob": "^7.1.1",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-spec-reporter": "^0.0.32",
    "mkdirp": "^0.5.1",
    "mocha": "^4.0.0",
    "puppeteer": "^0.13.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.52.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rxjs": "^5.4.2",
    "rxjs-tslint-rules": "^4.4.1",
    "tslib": "^1.6.1",
